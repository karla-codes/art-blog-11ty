---
layout: "layout/base.njk"
---

<div class="art-post">
  <div>
    <h2>{{ title }}</h2>
    <p>{{ date | readableDate }}</p>
    {{ content | safe }}
  </div>
  <img
    srcset="{{ image }}?nf_resize=fit&w=480 480w, {{ image }}?nf_resize=fit&w=600 600w,{{ image }}?nf_resize=fit&w=900 900w, {{ image }}?nf_resize=fit&w=1200 1200w"
    sizes="80vw"
    src="{{ image }}?nf_resize=fit&w=800"
    alt="{{ altText }}"
  />
</div>

<div class="post-nav">
  <a href="/">&#8592; Back to Sketchbook</a>
</div>
